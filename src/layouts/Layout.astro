---
import Contacto from "../components/Contacto.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import "./src/styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Mentes Sanas</title>
  </head>
  <body>
    <Header />
    <slot />
    <Contacto/>
    <Footer />
  </body>
</html>

<style is:global>
  html,
  body {
    background-color:#FFFFFF
    margin: 0;
    width: 100%;
    height: 100%;
    scroll-behavior: smooth;
  }

  #toTop{
    display: hidden;
    opacity: 0;
    cursor: auto;
    animation: cambiar linear forwards;
    animation-timeline: scroll(root);
    animation-range: 0 20%;

  }

  @keyframes cambiar {
    to {
      display: block;
      opacity: 1;
      cursor: pointer;

      
    }
  }


  input{
    border-bottom: 2px solid #252529;
    padding-inline: 10px;
    border-radius: 3px;
    &&:hover{
      border-bottom: 2px solid #4B7184;
    }
  }

  textarea{
    border-bottom: 2px solid #252529;
    padding-inline: 10px;
    border-radius: 3px;
    resize: none;
    overflow-y: auto;

    &&:hover{
      border-bottom: 2px solid #4B7184;
    }
  }

</style>
